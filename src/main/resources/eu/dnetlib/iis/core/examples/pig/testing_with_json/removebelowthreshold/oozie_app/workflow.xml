<workflow-app xmlns="uri:oozie:workflow:0.4" name="removebelowthreshold">
	<parameters>
        <!-- Input datastores: -->
        <property>
			<name>input_from_project_reference_extraction</name>
			<description>records from the Project Reference Extraction module</description>
		</property>
        <!-- Input parameters: -->
		<property>
			<name>threshold</name>
			<description>records will be filtered by this threshold</description>
		</property>
        <!-- Output datastores: -->
        <property>
			<name>output</name>
			<description>input_from_project_reference_extraction records with confidenceLevel above the threshold</description>
		</property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>

    <start to="generate-schema" />

	<action name="generate-schema">
	    <java>
	        <main-class>eu.dnetlib.iis.common.javamapreduce.hack.AvroSchemaGenerator</main-class>
	        <arg>eu.dnetlib.iis.referenceextraction.project.schemas.DocumentToProject</arg>
	        <arg>eu.dnetlib.iis.importer.schemas.DocumentToProject</arg>
	        <capture-output />
	    </java>
	    <ok to="removebelowthreshold" />
	    <error to="fail" />
	</action>
	
    <action name="removebelowthreshold">
        <pig>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>

            <!-- Path to PIG script the workflow executes. -->
            <script>lib/scripts/removebelowthreshold.pig</script>

            <!-- Input datastores: -->
            <param>input_from_project_reference_extraction=${input_from_project_reference_extraction}</param>
            <param>schema_input_from_project_reference_extraction=${wf:actionData('generate-schema')['eu.dnetlib.iis.referenceextraction.project.schemas.DocumentToProject']}</param>
            <!-- Input parameters: -->
            <param>threshold=${threshold}</param>
            <!-- Output datastores: -->
            <param>output=${output}</param>
            <param>schema_output=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.DocumentToProject']}</param>
        </pig>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
